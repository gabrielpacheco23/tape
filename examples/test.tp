#! This program outputs the letter A and a newline character

make tape[3]
make ptr: idx   #! ptr is now the name of the idx

incr tape[ptr]
+4 

loop (
    incr ptr
    incr tape[ptr]
    +11
    incr ptr
    incr tape[ptr]
    +1

    decr ptr
    +1
    decr tape[ptr]
)

incr ptr
incr tape[ptr]
+4
putch

incr ptr
putch
